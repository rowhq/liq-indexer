# Ponder Configuration
# Copy this file to .env and fill in your values

# Database URL (uses SQLite by default, can use PostgreSQL for production)
# DATABASE_URL=postgresql://user:password@localhost:5432/ponder

# RPC URLs for networks
# Get free RPC endpoints from: https://chainlist.org/

# Optimism
PONDER_RPC_URL_10=https://mainnet.optimism.io

# Base (if needed)
# PONDER_RPC_URL_8453=https://mainnet.base.org

# Arbitrum (if needed)
# PONDER_RPC_URL_42161=https://arb1.arbitrum.io/rpc

# You can use Alchemy, Infura, or other providers for better rate limits:
# PONDER_RPC_URL_10=https://opt-mainnet.g.alchemy.com/v2/YOUR_API_KEY

# Port for GraphQL API (default: 42069)
# PORT=42069

# Log level (default: info)
# Options: silent, error, warn, info, debug, trace
# PONDER_LOG_LEVEL=info
